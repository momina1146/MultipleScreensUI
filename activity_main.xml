<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0a0322"
    >

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/connected_world"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login here"
        android:fontFamily="serif"
        android:layout_marginTop="80dp"
        android:textSize="38sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label1"
        android:fontFamily="serif"
        android:layout_centerHorizontal="true"
        android:text="Welcome back you've"
        android:textColor="#c451c9"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label2"
        android:layout_centerHorizontal="true"
        android:textColor="#c451c9"
        android:text="been missed!"
        android:fontFamily="serif"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColorHint="#D1C6C6"
        android:background="@drawable/input_text"
        android:layout_below="@id/label3"
        android:fontFamily="serif"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/input2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColorHint="#D1C6C6"
        android:background="@drawable/input_text"
        android:layout_below="@id/input1"
        android:layout_marginTop="38dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:inputType="textPassword"
        />
    <TextView
        android:id="@+id/label4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/input2"
        android:layout_marginTop="10dp"
        android:text="Forgot your password?"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#D1C6C6"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:background="@drawable/button"
        android:layout_below="@id/label4"
        android:layout_marginTop="38dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Sign in"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textSize="20sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="@drawable/button"
        android:layout_below="@id/button1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="serif"
        android:text="Create new account"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:onClick="signUp_screen"
        />
    <TextView
        android:id="@+id/label5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_marginTop="38dp"
        android:text="Or continue with"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="#D1C6C6"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="170dp"
        android:id="@+id/icon1"
        android:layout_below="@id/label5"
        android:src="@drawable/icon1"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/icon2"
        android:layout_below="@id/label5"
        android:layout_toRightOf="@id/icon1"
        android:src="@drawable/facebook_icon"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/icon3"
        android:layout_below="@id/label5"
        android:layout_marginEnd="150dp"
        android:layout_toRightOf="@id/icon2"
        android:src="@drawable/apple"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>